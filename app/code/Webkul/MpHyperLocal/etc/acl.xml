<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Webkul_Marketplace::marketplace">
                    <resource id="Webkul_MpHyperLocal::manager" title="Hyper Local" sortOrder="10" >
                        <resource id="Webkul_MpHyperLocal::shiparea" title="Ship Area" sortOrder="10" >
                            <resource id="Webkul_MpHyperLocal::shiparea_list" title="List View" sortOrder="10"/>
                            <resource id="Webkul_MpHyperLocal::shiparea_add" title="Add Area" sortOrder="20"/>
                            <resource id="Webkul_MpHyperLocal::shiparea_massdelete" title="Mass Delete" sortOrder="30"/>
                        </resource>
                        <resource id="Webkul_MpHyperLocal::shiprate" title="Ship Rate" sortOrder="10" >
                            <resource id="Webkul_MpHyperLocal::shiprate_list" title="List View" sortOrder="10"/>
                            <resource id="Webkul_MpHyperLocal::shiprate_add" title="Add Rate" sortOrder="20"/>
                            <resource id="Webkul_MpHyperLocal::shiprate_massdelete" title="Mass Delete" sortOrder="30"/>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Webkul_MpHyperlocal::config_mphyperlocal" title="Hyper Local Configuration" sortOrder="50" >
                            </resource>
                        </resource>
                    </resource>
                </resource>
            </resource>   
        </resources>
    </acl>
</config>